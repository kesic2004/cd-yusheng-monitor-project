      /* 左边的下拉菜单 */
      leftMenuCollapse: [
        {
          index: '1',
          name: '工作空间',
          items: [
            { index: '/Main', name: '控制台', component: () => import('@/components/Main') }
          ]
        },
        {
          index: '2',
          name: '罐装系统',
          items: [
            { index: '2-1', name: '充装记录' },
            { index: '2-2', name: '机构管理' },
            { index: '2-3', name: '价格管理' },
            { index: '2-4', name: '操作员管理' },
            { index: '2-5', name: '站秤管理' },
            { index: '2-6', name: '打印票据' }
          ]
        },
        {
          index: '3',
          name: '站点信息',
          items: [
            { index: '3-1', name: '站点信息' },
            { index: '3-2', name: '气瓶档案' },
            { index: '3-3', name: '从业人员' },
            { index: '3-4', name: '充检项目' },
            { index: '3-5', name: '充前检查/充后复检' },
            { index: '3-6', name: '常用厂家管理' }
          ]
        },
        {
          index: '4',
          name: '气瓶配送',
          items: [
            { index: '4-1', name: '调拨出站' },
            { index: '4-2', name: '配送车辆' }
          ]
        }
      ],
      leftMenuDefaultActive: '/Main', /* 默认跳转到的路径 */
      leftMenuWelcome: '/Welcome', /* 不显示任何页面时显示的页面 */
      leftMenuDefaultName: '工作空间',
      leftMenuWidth: 201, /* 左边菜单的宽度(单位像素) */
      leftMenuIsCollapse: false, /* 菜单是否收起来 */
      mySubHeaderHeight: 40, /* 标签栏的高度 */
      /*
       * name : URL
       * label : 显示的名字
       */
      myClickedItems: [],
      myActiveClickedItem: null /* 活动的标签页 */
    }
  },
  computed: {
    leftMessageWidthString: function () {
      return this.leftMessageWidth + 'px'
    },
    leftMessageHeightString: function () {
      return this.leftMessageHeight + 'px'
    },
    leftMenuWidthString: function () {
      return this.leftMenuWidth + 'px'
    },
    mySubHeaderHeightString: function () {
      return this.mySubHeaderHeight + 'px'
    }
  },
  watch: {
    myClickedItems: function (ov, nv) {
      // ov.forEach(item => {
      //   console.log('Old myClickedItems.lable ' + item.label)
      //   console.log('Old myClickedItems.name ' + item.name)
      //   console.log('====================')
      // })
      // nv.forEach(item => {
      //   console.log('New myClickedItems.lable ' + item.label)
      //   console.log('New myClickedItems.name ' + item.name)
      //   console.log('====================')
      // })
    }
  },
  mounted () {
    this.myClickedItemAddDefault()
  },
  methods: {
    /**
     * 新点击的菜单的路径
     * @param {*} index：点击子菜单的index属性(URL)
     * @param {*} indexPath：点击菜单的index属性的路径，是一个数组，分别是从上到下的序号，如：'1'，'1-1'
     * @param {*} menu 菜单对象
     *                 menu._vnode.children[0].text是菜单名
     */
    leftMainMenuSelected (index, indexPath, menu) {
      // console.log('Menu ' + index + ' selected.')
      // console.log('Menu ' + Array.isArray(indexPath) + ' selected.')
      // console.log(typeof indexPath[0])
      // console.log(typeof indexPath[1])
      // console.log(typeof menu)
      // console.log(menu)
      // console.log(menu._vnode.children[0].text)
      for (var i1 = 0; i1 < this.myClickedItems.length; ++i1) {
        if (this.myClickedItems[i1].name === index) {
          return
        }
      }
      var item = {}
      this.myActiveClickedItem = item.name = index
      item.label = menu._vnode.children[0].text
      this.myClickedItems.push(item)
      // if (this.$router.currentRoute.fullPath !== index) {
      //   this.$router.push({ path: index })
      // }
    },
    /**
     * 新增标签
     * @param {*} item 标签
     */
    myClickedItemAdd (item) {
      // console.log('Add ' + item.label)
      // console.log('Add ' + item.name)
    },
    /**
     * 点击标签
     * @param {*} item 标签对象
     *            item._data.index是该标签的序号
     */
    myClickedItemClick (item) {
      // console.log('Click')
      // console.log(item.label)
      // console.log(item.name)
      // console.log(item._data.index)
      if (this.$router.currentRoute.fullPath !== item.name) {
        this.$router.push({ path: item.name })
      }
      this.myActiveClickedItem = item.name
    },
    /**
     * 切换标签
     * @param {*} oldName 旧标签名
     * @param {*} newName 新标签名
     */
    myClickedItemChange (oldName, newName) {
      // console.log('Change ' + oldName)
      // console.log('Change ' + newName)
    },
    /**
     * 编辑标签
     * @param {*} targetName 目标名
     * @param {*} action 动作
     */
    myClickedItemEdit (targetName, action) {
      // console.log('Edit ' + targetName)
      // console.log('Edit ' + action)
    },
    /**
     * 移除标签
     * @param {*} targetName 标签名
     */
    myClickedItemRemove (targetName) {
      var oldArr = this.myClickedItems
      var newArr = []
      for (var i = 0; i < oldArr.length; ++i) {
        if (oldArr[i].name !== targetName) {
          newArr.push(oldArr[i])
        }
      }
      /*
       * 如果关闭的是活动标签
       */
      if (this.myActiveClickedItem === targetName) {
        this.myClickedItems = newArr
        /*
        * 如果标签已经没有了
        */
        if (newArr.length === 0) {
          this.modifyUrl(this.leftMenuWelcome)
          this.myActiveClickedItem = null
        /*
        * 如果关闭的是第一个标签，后移
        */
        } else if (oldArr[0].name === targetName) {
          for (var j = 1; j < oldArr.length; ++j) {
            if (oldArr[j].name !== targetName) {
              this.myActiveClickedItem = oldArr[j]
              this.modifyUrl(this.myActiveClickedItem)
              break
            }
          }
        /*
        * 否则前移
        */
        } else {
          for (var k = 0; k < oldArr.length; ++k) {
            if (oldArr[k].name === targetName) {
              for (var l = k + 1; l < oldArr.length; ++l) {
                if (oldArr[l] !== targetName) {
                  this.myActiveClickedItem = oldArr[l]
                  this.modifyUrl(this.myActiveClickedItem)
                  return
                }
              }
            }
          }
        }
      } else {
        this.myClickedItems = newArr
        /*
         * 如果标签已经没有了
         */
        if (newArr.length === 0) {
          this.myActiveClickedItem = null
          this.modifyUrl(this.leftMenuWelcome)
        }
      }
    },
    myClickedItemAddDefault () {
      var item = {}
      item.name = this.leftMenuDefaultActive
      item.label = this.leftMenuDefaultName
      this.myClickedItems.push(item)
      this.modifyUrl(this.leftMenuDefaultActive)
      this.myActiveClickedItem = item.name
    },
    modifyUrl (url) {
      if (this.$router.currentRoute.fullPath !== url) {
        this.$router.push({ path: url })
      }
    }
  }
}
